<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sharangirdhani.inclass11.ContactsListActivity"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="FullName"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        />

    <ImageButton
        android:id="@+id/imageButtonEditMain"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/textViewFullName"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/edit_profile" />

    <ImageButton
        android:id="@+id/imageButtonAdd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/add_icon" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_below="@+id/imageButtonAdd" />
</RelativeLayout>
