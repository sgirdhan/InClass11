<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.sharangirdhani.inclass11.SignupActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/editSignupFirstname"
        android:hint="First Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editSignupFirstname"
        android:layout_alignRight="@+id/editSignupFirstname"
        android:layout_alignEnd="@+id/editSignupFirstname"
        android:layout_marginTop="38dp"
        android:id="@+id/editSignupLastname"
        android:hint="Last Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editSignupLastname"
        android:layout_alignLeft="@+id/editSignupLastname"
        android:layout_alignStart="@+id/editSignupLastname"
        android:layout_marginTop="23dp"
        android:id="@+id/editSignupEmail"
        android:hint="E-mail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editSignupEmail"
        android:layout_alignStart="@+id/editSignupEmail"
        android:id="@+id/editSignupPassword"
        android:hint="Choose Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editSignupPassword"
        android:layout_alignLeft="@+id/editSignupPassword"
        android:layout_alignStart="@+id/editSignupPassword"
        android:layout_marginTop="28dp"
        android:id="@+id/editSignupRepeat"
        android:hint="Repeat Password" />

    <Button
        android:text="@string/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSignupRepeat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:id="@+id/buttonSignupCancel" />

    <Button
        android:text="@string/buttonSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSignupCancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:id="@+id/buttonSignupCreate"
        android:onClick="onClickSignup" />

</RelativeLayout>
